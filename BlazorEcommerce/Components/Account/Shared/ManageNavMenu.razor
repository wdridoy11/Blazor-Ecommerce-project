@using Microsoft.AspNetCore.Identity
@using BlazorEcommerce.Data

@inject SignInManager<ApplicationUser> SignInManager

<ul>
    <li>
        <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage" Match="NavLinkMatch.All">Profile</NavLink>
    </li>
    <li>
        <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage/Email">Email</NavLink>
    </li>
    <li>
        <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage/ChangePassword">Password</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li>
            <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li>
        <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</NavLink>
    </li>
    <li>
        <NavLink class="block rounded-md px-2 py-3 text-base hover:bg-slate-200" href="Account/Manage/PersonalData">Personal data</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
