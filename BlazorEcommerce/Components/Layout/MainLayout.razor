@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavBarAdmin />
    </div>

    <main>
        <div>
            @* <NavMenu /> *@
        </div>

        <article class="@( isAdmin ? "p-5 bg-[#F6F6F6] h-screen overflow-y-scroll" : "" )">
